{
    "compilerOptions": {
      "target": "es2018",
      "module": "CommonJS",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "sourceMap": true
    },
    "include": ["src", "api"],
    "exclude": ["node_modules"]
  }

  
  